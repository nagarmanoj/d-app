{
  "compilerOptions": { 
    "target": "es2016",                                 
    "lib": ["es6"],                                   
    "module": "commonjs",                               
    "resolveJsonModule": true,                          
    "allowJs": true,                                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }                                               
  },
  "include": ["./src/**/*"]
}
